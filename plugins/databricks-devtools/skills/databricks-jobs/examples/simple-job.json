{
  "name": "Simple Notebook Job",
  "description": "A basic job that runs a single Databricks notebook",
  "tags": {
    "environment": "dev",
    "team": "data-engineering"
  },
  "tasks": [
    {
      "task_key": "main",
      "description": "Run the main notebook task",
      "notebook_task": {
        "notebook_path": "/Users/user@example.com/HelloWorld"
      },
      "timeout_seconds": 3600,
      "retry_on_timeout": true,
      "max_retries": 2
    }
  ],
  "timeout_seconds": 7200,
  "email_notifications": {
    "on_start": ["user@example.com"],
    "on_success": ["user@example.com"],
    "on_failure": ["alerts@example.com"]
  },
  "notification_settings": {
    "no_alert_for_skipped_runs": false,
    "no_alert_for_canceled_runs": false
  }
}
