{
  "$schema": "../../schemas/hooks-schema.json",
  "description": "Ralph Loop plugin hooks for multi-session support",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "ralph-loop-active",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsx ${CLAUDE_PLUGIN_ROOT}/src/hooks/session-start.ts"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "ralph-loop-active",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsx ${CLAUDE_PLUGIN_ROOT}/src/hooks/stop.ts"
          }
        ]
      }
    ]
  }
}
