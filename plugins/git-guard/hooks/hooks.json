{
  "$schema": "../../schemas/hooks-schema.json",
  "description": "Git Guard hooks - prevents bypassing git hooks",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash:git",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsx ${CLAUDE_PLUGIN_ROOT}/src/hooks/commit-guard.ts"
          }
        ]
      }
    ]
  }
}
