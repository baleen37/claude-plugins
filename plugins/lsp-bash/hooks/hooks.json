{
  "description": "Auto-install bash-language-server if not found",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/check-install.sh &>/dev/null &"
          }
        ]
      }
    ]
  }
}
