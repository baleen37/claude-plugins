{
  "name": "lsp-bash",
  "version": "5.8.0",
  "description": "Bash Language Server integration for Claude Code",
  "author": {
    "name": "baleen37"
  },
  "license": "MIT",
  "keywords": [
    "lsp",
    "bash",
    "shell",
    "autocomplete",
    "diagnostics"
  ],
  "lspServers": {
    "bash": {
      "command": "bash-language-server",
      "args": [
        "start"
      ],
      "extensionToLanguage": {
        ".sh": "bash",
        ".bash": "bash",
        ".zsh": "bash"
      }
    }
  }
}
