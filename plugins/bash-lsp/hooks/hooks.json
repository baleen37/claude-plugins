{
  "description": "Auto-install bash-language-server if not found",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/check-install.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
