{
  "name": "lsp-python",
  "version": "5.15.6",
  "description": "Python Language Server integration using Pyright for Claude Code",
  "author": {
    "name": "baleen37",
    "email": "git@baleen.me"
  },
  "keywords": [
    "lsp",
    "python",
    "pyright",
    "autocomplete",
    "diagnostics",
    "type-checking"
  ],
  "lspServers": {
    "python": {
      "command": "pyright",
      "args": [
        "--stdio"
      ],
      "extensionToLanguage": {
        ".py": "python",
        ".pyi": "python"
      }
    }
  }
}
