{
  "description": "Auto-install LSP servers if not found",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/check-install-lsps.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
